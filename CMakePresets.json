            "jobs": 4
        },
        {
            "name": "linux-release",
            "configurePreset": "linux-release",
            "configuration": "Release",
            "jobs": 4
        },
        {
            "name": "windows-release",
            "configurePreset": "windows-release",
            "configuration": "Release",
            "jobs": 4
        },
        {
            "name": "windows-debug",
            "configurePreset": "windows-debug",
            "configuration": "Debug",
            "jobs": 4
        },
        {
            "name": "windows-debug-profile",
            "configurePreset": "windows-debug-profile",
            "configuration": "Debug",
            "jobs": 4
        }
    ]
}